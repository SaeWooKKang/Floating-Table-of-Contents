{
  "name": "Mokcha",
  "description": "Table of Contents",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "scripting", 
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "js": ["contentScript/index.js"],
      "matches": [
        "https://*/*",
        "http://localhost/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background/index.js"
  }
}
